
<div class="row main-body">

    <div id="main-posts">
        {.repeated section items}

        <!--WRAPPER-->

        <article id="post-{id}" class="{@|item-classes} row">

            <!--Feature Image-->
            {.main-image?}
            <div class="large-6 columns image">
                
                <a href="{fullUrl}" class="main-image content-fill" style="width:100%">
                    <img {@|image-meta} src="{fullUrl}?format=original" />
                </a>
            </div>
            <div class="large-6 columns text">
                <!--Feature title -->

                <h3 class="title">
                    {.passthrough?}
                    <a class="post-title">{title}</a>
                    {.or}
                    <a class="post-title">{title}</a>
                    {.end}
                </h3>
                <div class="post-content row">

                    <!--EXCERPT OR BODY-->
                    <div>
                        {.if excerpt}
                        {excerpt}
                        {.or}

                        <!--MAIN CONTENT-->

                        {body}

                        {.end}
                    </div>
                </div>
            </div>
            {.end}
        </article>

        {.or}
        No features defined.
    </div>
    {.end}

</div>
</div>