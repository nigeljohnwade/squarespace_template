<div class="main-body row">
{.section item}

  <!--WRAPPER-->

  <div class="large-3 columns">
      <div class="row">
          <div class="large-4 columns" id="avatar">
              <img alt="{author.displayName}" src="/global/{author.avatarId}?format=100w" class="avatar avatar-95 photo" height="95" width="95">            </div>
          <div class="large-8 columns meta-text">
              <p class="author"><a href="http://blog.stipso.com/author/marcus/" title="Posts by {author.displayName}" rel="author">{author.displayName}</a></p>
              <p><time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time></p>
              <p class="author-bio">{author.bio}</p>
          </div>
      </div>
      <div class="row">
          <div class="large-12 columns" id="related-posts">
              <h3>Related Posts:</h3>
              <p><a href="http://blog.stipso.com/2014/12/09/2015-content-marketing-personalisation/" title="2015 in content marketing: get personal or die trying">2015 in content marketing: get personal or die trying</a></p>
              <p><a href="http://blog.stipso.com/2014/12/09/2015-content-marketing-personalisation/" title="2015 in content marketing: get personal or die trying">2015 in content marketing: get personal or die trying</a></p>
              <p><a href="http://blog.stipso.com/2014/12/08/content-marketing-digest-65/" title="Content marketing digest #65">Content marketing digest #65</a></p>
              <p><a href="http://blog.stipso.com/2014/12/03/2014-marketing-predictions-claim-chowder/" title="The Great 2014 Marketing Prediction Postmortem">The Great 2014 Marketing Prediction Postmortem</a></p>
              <p><a href="http://blog.stipso.com/2014/12/03/2014-marketing-predictions-claim-chowder/" title="The Great 2014 Marketing Prediction Postmortem">The Great 2014 Marketing Prediction Postmortem</a></p>
          </div>
      </div>
  </div>

  
  <article id="post-{id}" class="{@|item-classes} large-9 columns post-content">
    
    <!--POST TILE-->

    <h1 class="title">
      {.passthrough?}
        <a href="{sourceUrl}" target="_blank">{title}</a>
      {.or}
        <a href="{fullUrl}">{title}</a>
      {.end}
    </h1>

    <!--MAIN CONTENT-->

    {body}

    <!--BLOG INJECTION-->

    {postItemInjectCode}    

    <!--CATEGORIES-->

    {.repeated section categories}
      <a class="category" href="{collection.fullUrl}?category={@|url-encode}">{@}</a>{.alternates with},
    {.end}

    <!--TAGS-->

    {.repeated section tags}
      <a class="tag" href="{collection.fullUrl}?tag={@|url-encode}">{@}</a>{.alternates with},
    {.end}

    <!--SHARE AND LIKE-->

    {@|like-button}
    {@|social-button}

    <!--AUTHOR AND DATE-->
    
    <p class="meta">
      Published on <a href="{fullUrl}"><time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time></a> by <a href="{collection.fullUrl}?author={author.id}">{author.displayName}</a>.
      {.section sourceUrl}
        <a href="{@}" class="source" target="_blank">Source</a>.
      {.end}
    </p>        

    <!--LOCATION-->

    {.section location}
      {.section addressTitle}
        {addressTitle}
        {addressLine1}
        {addressLine2}
        {addressCountry}
      {.end}
    {.end}

    <!--COMMENTS-->

    {@|comments}

  </article>

{.end}
    

<!--PAGINATION-->
  
{.section pagination}
  <nav>

    <!--NEWER PAGE-->

    {.section prevItem}
      <a href="{fullUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}
    
    <!--OLDER PAGE-->

    {.section nextItem}
      <a href="{fullUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}
</div>