<div id="features-page">
    {.repeated section items}

    <!--WRAPPER-->
    <div class="block">
        <article id="post-{id}" class="{@|item-classes} row">

            <!--Feature Image-->
            {.main-image?}
                <a  href="#" data-reveal-id="myModal{@index}">
                    <div class="large-6 columns image">
                        <img {@|image-meta} src="{fullUrl}?format=original" class="main-image content-fill" style="width:100%" />
                    </div>
                </a>
            <div class="large-6 columns text">
            {.or}
            <div class="large-12 columns text">
                {.end}
                <div class="post-content row">
                    <!--Feature title -->
                    <h3 class="title">
                        <a href="#" data-reveal-id="myModal{@index}">
                            {.passthrough?}
                            {title}
                            {.or}
                            {title}
                            {.end}
                        </a>
                    </h3>
                    <!--EXCERPT OR BODY-->
                    <div>
                        {.if excerpt}
                        {excerpt}
                        {.or}

                        <!--MAIN CONTENT-->

                        {body}

                        {.end}
                    </div>
                    <a href="https://editor.stipso.com/users/new" class="button round"><squarespace:block-field id="CTAButtonText" columns="1" lock-layout="true" /></a>
                </div>
            </div>
        </article>
        <div id="myModal{@index}" class="reveal-modal xlarge example" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
            <h2 id="modalTitle">Awesome. I have it.</h2>
            <p class="lead">Your couch.  It is mine.</p>
            <p>I'm a cool paragraph that lives inside of an even cooler modal. Wins!</p>
            <iframe src="{sourceUrl}"></iframe>
            <a class="close-reveal-modal" aria-label="Close">&#215;</a>
        </div>
    </div>
    {.or}
    No examples defined.
    {.end}
</div>