<div id="team">
    
    <div class="block gray">
        <div class="row">
            {.repeated section items}
            <div class="large-6 columns team-single">
                <img {@|image-meta} src="{fullUrl}?format=100w">
                <div>
                    <br>
                    <h2>
                        {.passthrough?}
                        {title}
                        {.or}
                        {title}
                        {.end}
                    </h2>
                    <p>
                        {body}
                    </p>
                </div>
                {.section author}
                {.repeated section socialOptions}
                <a href="https://twitter.com/{username}">
                    <span class="typcn typcn-social-twitter"></span>
                </a>
                {.end}
                {.end}
            </div>
            <div class="social">
                {@|social-button}
            </div>
            {.end}
        </div>
    </div>
</div>