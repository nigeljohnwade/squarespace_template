<div id="team">
    
    <div class="block gray">
        <div class="row">
            <div class="row">
                <div class="large-8 large-offset-2 columns team-single">
                    {.repeated section items}
                    <div class="large-6 columns team-single">
                        <img {@|image-meta} src="{fullUrl}?format=100w">
                        <div>
                            <br>
                            <h2>
                                {.passthrough?}
                                {title}
                                {.or}
                                {title}
                                {.end}
                            </h2>
                            <p>
                                {body}
                            </p>
                        </div>
                        {.section author}
                        {.repeated section socialOptions}
                        <a href="https://twitter.com/{username}">
                            <span class="typcn typcn-social-twitter"></span>
                        </a>
                        {.end}
                        {.end}
                    </div>
                    {.end}
                </div>
                <div class="large-2 columns"></div>
            </div>
        </div>
    </div>
</div>