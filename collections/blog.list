
<!-- CATEGORY FILTER RESULTS ex: http://base-template.squarespace.com/blog/?category=category1 -->

{.section categoryFilter}
  <p>Filtering by Category: {@}</p>
{.end}

<!-- TAG FILTER RESULTS ex: http://base-template.squarespace.com/blog/?tag=tag2 -->

{.section tagFilter}
  <p>Filtering by Tag: {@}</p>
{.end}

<!-- AUTHOR FILTER RESULTS ex: http://www.base-template.com/blog?author=4f046df4d09ae2cf23d1aaa2 -->

{.if authorFilter}
  <p>Filtering by Author: {author.displayName}</p>
{.end}

<!--ITEM LOOP-->

{.repeated section items}

  <!--WRAPPER-->
  
  <article id="post-{id}" class="{@|item-classes} row">
    
    
    <div class="large-3 columns">
        <!--POST META-->
        
        <div class="meta">
          <a href="?author={author.id}"><p>{author.displayName}</p></a>
          <a href="{fullUrl}"><p><time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time></p></a>.
          {.section sourceUrl}
            <a href="{@}" class="source" target="_blank">Source</a>.
          {.end}
        </div>   
    </div>
    <div class="large-9 columns">
        <!--POST TILE-->
            
        <h1 class="title">
          {.passthrough?}
            <a href="{sourceUrl}" target="_blank">{title}</a>
          {.or}
            <a href="{fullUrl}">{title}</a>
          {.end}
        </h1>
        <!--MAIN IMAGE-->
        {.main-image?}  
          <a href="{fullUrl}" class="main-image content-fill">
            <img {@|image-meta} src="{fullUrl}?format=200w"/>
          </a>
        {.end}
        <!--EXCERPT OR BODY-->
    
        {.if excerpt}
          {excerpt}
          <a class="link" href="{fullUrl}">Read More</a>
        {.or}
    
        <!--MAIN CONTENT-->
    
          {body}
          <a class="link" href="{fullUrl}">Permalink</a>
    
        {.end}
    
        <!--BLOG INJECTION-->
    
        {postItemInjectCode}    
    
        <!--CATEGORIES-->
    
        {.repeated section categories}
          <a class="category" href="?category={@|url-encode}">{@}</a>{.alternates with},
        {.end}
    
        <!--TAGS-->
    
        {.repeated section tags}
          <a class="tag" href="?tag={@|url-encode}">{@}</a>{.alternates with},
        {.end}
    
        <!--SHARE AND LIKE
    
        {@|like-button}
        {@|social-button}
        -->
    
        <!--LINK TO COMMENTS-->
    
        {@|comment-link}
    
        <!--LOCATION-->
    
        {.section location}
          {.section addressTitle}
            {addressTitle}
            {addressLine1}
            {addressLine2}
            {addressCountry}
          {.end}
        {.end}

      </div>
  </article>

  {.or}
    No blog posts yet.
{.end}
  
<!--PAGINATION-->
  
{.if pagination}
  <nav>

    <!--NEWER PAGE-->

    {.if pagination.prevPage}
      <a href="{pagination.prevPageUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}

    <!--OLDER PAGE-->

    {.if pagination.nextPage}
      <a href="{pagination.nextPageUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}
