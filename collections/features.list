
<div class="row main-body">

    <div id="main-posts">
        {.repeated section items}

        <!--WRAPPER-->

        <article id="post-{id}" class="{@|item-classes} row">


            <div class="large-6 columns image">
                <!--Feature Image-->
                {.main-image?}
                <a href="{fullUrl}" class="main-image content-fill">
                    <img {@|image-meta} src="{fullUrl}?format=200w" />
                </a>
                {.end}
            </div>
            <div class="large-6 columns text">
                <!--Feature title -->

                <h3 class="title">
                    {.passthrough?}
                    <a class="post-title">{title}</a>
                    {.or}
                    <a class="post-title">{title}</a>
                    {.end}
                </h3>
                <div class="post-content row">
                    
                    <!--EXCERPT OR BODY-->
                    <div>
                        {.if excerpt}
                        {excerpt}
                        {.or}

                        <!--MAIN CONTENT-->

                        {body}

                        {.end}
                    </div>
                </div>
                <!--BLOG INJECTION-->

                {postItemInjectCode}


                <!--TAGS
            
                {.repeated section tags}
                  <a class="tag" href="?tag={@|url-encode}">{@}</a>{.alternates with},
                {.end}
                -->

                <!--SHARE AND LIKE
            
                {@|like-button}
                {@|social-button}
                -->

                <!--LINK TO COMMENTS-->

                {@|comment-link}

                <!--LOCATION-->

                {.section location}
                {.section addressTitle}
                {addressTitle}
                {addressLine1}
                {addressLine2}
                {addressCountry}
                {.end}
                {.end}
            </div>
        </article>

        {.or}
        No features defined.
    </div>
    {.end}

</div>
</div>